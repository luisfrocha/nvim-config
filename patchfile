+            keywords = {
+                FIX = { icon = "ÔÜà ", color = "error", alt = { "FIXME", "BUG", "FIXIT", "ISSUE" } },
+                TODO = { icon = "ÔÄå ", color = "info" },
+                HACK = { icon = "Ôíê ", color = "warning" },
+                WARN = { icon = "ÔÅ± ", color = "warning", alt = { "WARNING", "XXX" } },
